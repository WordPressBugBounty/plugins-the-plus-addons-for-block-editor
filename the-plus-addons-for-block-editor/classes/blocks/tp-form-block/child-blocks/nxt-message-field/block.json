{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "tpgb/tp-form-message-field",
	"version": "0.1.0",
	"title": "Message",
	"category": "tpgb",
	"description": "Add a text field in your form",
	"example": { "attributes": {} },
	"supports": { "anchor": true, "align": ["wide", "full"] },
	"textdomain": "tpgb",
	"ancestor": ["tpgb/tp-form-block"],
	"attributes": {
		"block_id": { "type": "string", "default": "" },
		"labelss": { "type": "string", "default": "Message" },
		"reqTgl": { "type": "boolean", "default": false },
		"placeholder": { "type": "string", "default": "Message" },
		"error": { "type": "string", "default": "This field is required." },
		"hlpTxt": { "type": "boolean", "default": false },
		"desctxt": { "type": "string", "default": "Description" },
		"autoComplete": { "type": "string", "default": "off" },
		"lineNum": { "type": "string", "default": 2 },
		"inpSz": {
			"type": "object",
			"default": { "md": "100", "unit": "%" },
			"style": [
				{
					"selector": "{{PLUS_CLIENT_ID}} {margin:0; width: {{inpSz}}; } {{PLUS_CLIENT_ID}}[data-type='tpgb/tp-form-message-field'].tp-form-message-field{width:100%} {{PLUS_CLIENT_ID}}~.block-editor-block-list__block.wp-block:has(.nxt-btn-inline) {flex: 0;}",
					"backend": true
				},
				{
					"selector": "{{PLUS_WRAP}}.tp-form-message-field {width: {{inpSz}}; } {{PLUS_WRAP}}~.nxt-submit-button.nxt-btn-inline{flex: 0;}",
					"backend": false
				}
			]
		},
		"descPoss": { "type": "string", "default": "top" }
	}
}
